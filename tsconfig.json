{
  "compilerOptions": {
    "outDir": "./lib/",
    "inlineSourceMap": true,
    "module": "esnext",
    "target": "es2021",
    "lib": ["es2021"],
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
